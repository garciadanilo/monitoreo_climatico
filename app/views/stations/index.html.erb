<% content_for :head do %>
  <%= stylesheet_link_tag 'jquery-ui.min', :media => 'all' %>
  <%= javascript_include_tag 'jquery-ui.min' %>
  <%= javascript_include_tag 'jquery.validate' %>
  <%= javascript_include_tag 'additional-methods' %>
  <%= javascript_include_tag 'stations' %>
<% end %>
<div class="top-bar">
  <div class="top-bar-title">
    <span data-responsive-toggle="responsive-menu" data-hide-for="medium">
      <button class="menu-icon dark" type="button" data-toggle></button>
    </span>
    <strong>Site Title</strong>
  </div>
  <div id="responsive-menu">
    <div class="top-bar-left">
      <ul class="dropdown menu" data-dropdown-menu>
        <li>
          <a href="#">One</a>
          <ul class="menu vertical">
            <li><a href="#">One</a></li>
            <li><a href="#">Two</a></li>
            <li><a href="#">Three</a></li>
          </ul>
        </li>
        <li><a href="#">Two</a></li>
        <li><a href="#">Three</a></li>
      </ul>
    </div>
    <div class="top-bar-right">
      <ul class="menu">
        <li><input type="search" placeholder="Search"></li>
        <li><button type="button" class="button">Search</button></li>
      </ul>
    </div>
  </div>
</div>
<%=render 'shared/admin_menu', page: 'stations'%>
<div class="row margint">
	<h2>Estaciones</h2>
	<div class="small-12 large-2 columns">
		<ul class="button-group">
		  <li><%=link_to "<i class='fa fa-bus fa-2x'></i></br>Agregar".html_safe,new_station_path, class: 'button' %></li>
		  <li><%=link_to "<i class='fa fa-refresh fa-2x'></i></br>Actualizar".html_safe,stations_path(page: @page), class: 'button alert' %></li>
    </ul>
	</div>
	<div class="small-12 large-10 columns">
		<div class="row">
	    <%=form_tag('#', method: :get) do%>
		    <div class="large-8 columns">
		      <div class="row collapse">
	      		<div class="small-10 columns">
		          <%=text_field_tag(:search_hint, '', placeholder: 'Buscar')%>
		        </div>
		        <div class="small-2 columns">
		        	<%=submit_tag 'Buscar', class: 'button postfix'%>
		        </div>
		      </div>
		    </div>
	    <%end%>
	  </div>
		<% if flash[:notice]%>
			<div data-alert class="alert-box success radius">
	  		<%= flash[:notice]%>
	  		<a href="#" class="close">&times;</a>
			</div>
		<% end %>
		<%= render 'stations'%>
	</div>

	<div id="delete" class="reveal-modal tiny" data-reveal>
		<p class="text-center">¿Esta seguro de seguir con la operación?</p>
		<div class="row">
		  <div class="small-6 small-centered columns">
		   	<a href="#" id="continue" class="button">Continuar</a>
		  </div>
		</div>
		<a class="close-reveal-modal">&#215;</a>
	</div>
</div>
